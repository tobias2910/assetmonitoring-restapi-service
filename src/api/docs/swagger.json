{
    "openapi": "3.0.0",
    "info": {
        "title": "Post Processor API with Swagger",
        "version": "0.1.0",
        "description": "Express API documented with Swagger for the Post Processing Service.",
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
            },
        "contact": {
            "name": "Tobias Caliskan",
            "url": "http://localhost:3000",
            "email": "tobiascaliskan@gmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1"
        }
    ],
    "tags": [
        {
            "name": "service",
            "description": "Controls the state of the post processing service"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/serviceState": {
            "post": {
                "tags":[
                    "service"
                ],
                "summary": "Change state of the processing service.",
                "description": "Can be used to either start or stop the service.",
                "operationId": "changeState",
                "requestBody": {
                    "description": "The JSON that contains the boolean 'state'.",
                    "required": true,
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/Service"
                        }
                      }
                    }
                }, 
                "responses": {
                    "400": {
                        "description": "The necessary 'state' property is not available or not from type 'boolean'"
                    },
                    "200": {
                        "description": "State is true / false"
                    }
                }
            },
            "get": {
                "tags":[
                    "service"
                ],
                "summary": "Get the current state of the processing service",
                "description": "Can be used to obtain the current state of the service.",
                "operationId": "getState",
                "responses": {
                    "200": {
                        "description": "Returns the state"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Service": {
                "type": "object",
                "required": [
                    "state"
                ],
                "properties": {
                    "state": {
                        "type": "boolean",
                        "default": false
                    }
                } 
            }
        }
    }
  }
  